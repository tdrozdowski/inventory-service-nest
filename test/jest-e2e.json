{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageReporters": [
    "text",
    "text-summary",
    "lcov",
    "html",
    "json-summary"
  ],
  "coverageDirectory": "../coverage-e2e",
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 75,
      "lines": 75,
      "statements": 75
    }
  }
}
